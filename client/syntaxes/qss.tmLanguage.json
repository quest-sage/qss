{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "QSS",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"comment": "Keyword",
					"name": "keyword.other.qss",
					"match": "\\b(package|import)\\b"
				},
				{
					"comment": "Type declaration",
					"name": "storage.type.qss",
					"match": "\\b(struct)\\b"
				},
				{
					"comment": "Primitive type",
					"name": "entity.name.type.qss",
					"match": "\\b(Int|Bool|String|Text|Entity|Ratio|Col|Pos|Texture|Player)\\b"
				}
			]
		},
		"strings": {
			"comment": "String literal",
			"name": "string.quoted.double.qss",
			"begin": "\"",
			"end": "[\\n\"]",
			"patterns": [
				{
					"name": "constant.character.escape.qss",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"comment": "Documentation comment",
					"name": "comment.block.documentation.qss",
					"begin": "\\*\\*",
					"end": "\\*\\*"
				},
				{
					"comment": "Line comment",
					"name": "comment.line.double-slash.qss",
					"begin": "//",
					"end": "\\n"
				},
				{
					"comment": "Block comment",
					"name": "comment.block.qss",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		}
	},
	"scopeName": "source.qss"
}